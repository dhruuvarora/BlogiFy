<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Signin</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-whT+qkGZID8ht2HR0VzmFQ65U7ZxsnubOPl1B8mQNDD3mOQmKqJZsjl1ni2H7u8"
    crossorigin="anonymous"
  />
  <style>
    body {
      background-color: #2d2f33;
      color: #e4e4e4;
    }

    .container {
      margin-top: 30px;
    }

    .form-control {
      background-color: #3e4045;
      border: 1px solid #5e60ce;
      color: #e4e4e4;
    }

    .form-control::placeholder {
      color: #a0a0a0;
    }

    .btn-primary {
      background-color: #5e60ce;
      border: none;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #4d50b2;
    }

    /* Loading Animation Styles */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      color: #e4e4e4;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      opacity: 1;
      transition: opacity 1s ease;
      visibility: visible;
    }

    .loading-overlay.fade-out {
      opacity: 0;
      visibility: hidden;
    }

    .loading-text {
      font-size: 24px;
      font-weight: bold;
    }

    /* Style for the help text */
    .form-text {
      color: #a0a0a0; /* Light grey color for better visibility */
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <form action="/user/signin" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
        />
        <div id="emailHelp" class="form-text">
          We'll never share your email with anyone else.
        </div>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          id="exampleInputPassword1"
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-text">BlogiFy</div>
  </div>

  <%- include('./partials/scripts') %>
  <script>
    // Fade out loading animation after 1 second
    window.addEventListener('load', function() {
      setTimeout(function() {
        document.getElementById('loadingOverlay').classList.add('fade-out');
      }, 1000);
    });
  </script>
</body>
</html>
